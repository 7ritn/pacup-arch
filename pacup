#!/bin/bash

function usage() {
  cat <<EOM
Usage: $(basename "$0") [OPTION]...
    -p          Run Pacman only
    -y          Skip typing 'y'
    -h          Show help
EOM
}

while (($#>0)); do
  case $1 in
    p|-p|--pacman)
      PACUP_MOD="pacman"
      ;;
    y|-y|--yes)
      PACUP_YES="yes"
      ;;
    h|-h|--help)
      usage
      exit 0
      ;;
    *)
      usage
      exit 1
      ;;
  esac
  shift
done

function PACUP_SYS() {
  : #SYS
}

function PACUP_PACMAN() {
  sudo pacman -Syu
  $PACUP_YES|sudo pacman -Rnsc $(pacman -Qtdq)  
}

if [ "$PACUP_MOD" == "pacman" ]; then
   PACUP_PACMAN
  if [ $? != 0 ]; then
    echo -e "\nPacman command requires root privileges.\nPlease try again.\n"
    PACUP_PACMAN
  fi
  exit 0
fi

#FPK
PACUP_SYS
if [ $? != 0 ]; then
  echo -e "\nRequesting root privileges.\nPlease try again.\n"
  PACUP_SYS
  if [ $? != 0 ]; then
    echo -e "\nExecution terminated because privilege elevation failed."
    exit 1
  fi
fi
PACUP_PACMAN
#AUR
exit 0
